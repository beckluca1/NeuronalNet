@page "/numberdraw"

<PageTitle>Number Draw</PageTitle>

<body>

<frame @onload='@(() => CallJSFunction("init"))'></frame>

<h1>Number Draw</h1>

<p>
    Draw a number in the field below and let the neural net
    work guess what number you just drew. Submit your result
    by clicking on the button containing the corresponding number.
</p>

<button class="btn btn-secondary"
        @onclick='@(() => CallJSFunction("fillCanvas",0))'>
        Stopschild
</button>
<button class="btn btn-secondary"
        @onclick='@(() => CallJSFunction("fillCanvas",1))'>
        Tempolimit 30
</button>
<button class="btn btn-secondary"
        @onclick='@(() => CallJSFunction("fillCanvas",2))'>
        Tempolimit 50
</button>
<button class="btn btn-secondary" 
        @onclick='@(() => CallJSFunction("fillCanvas",3))'>
        Vorfahrtsstraße
</button>
<button class="btn btn-secondary" 
        @onclick='@(() => CallJSFunction("fillCanvas",4))'>
        Vorfahrt gewähren
</button>
<button class="btn btn-secondary" 
        @onclick='@(() => CallJSFunction("fillCanvas",5))'>
        Anderes Schild
</button>

<br><br/>

<canvas id="image" width="300" height="300"></canvas>

<!--<br><br/>-->

<br><br/>

<p>Wählen Sie Dateien aus. Von Bildern werden Vorschaubilder erzeugt.</p>
<input type="file" id="files" name="files[]" single />
<output id="list"></output>

<br><br/>

<button class="btn btn-primary" 
        @onclick="@UploadTrafficSign">
        Upload data
</button>

